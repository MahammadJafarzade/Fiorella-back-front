@model IEnumerable<Slide>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                @if (ViewBag.slideCount >= ViewBag.sliderMaxCount)
                {
                    <a class="btn btn-danger disabled"  asp-action="Create">Create Slider</a>
                }
                else
                {
                    <a class="btn btn-success" asp-action="Create">Create Slider</a>

                }
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slider in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/img/@slider.Url" />
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@slider.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@slider.Id">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


